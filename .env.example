# UAIP Hub Configuration
# Copy this file to .env and update with your values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8443
SERVER_WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://uaip:uaip_password_dev@localhost:5432/uaip
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5

# Redis Configuration
REDIS_URL=redis://:uaip_redis_dev@localhost:6379
REDIS_POOL_SIZE=10

# NATS Configuration
NATS_URL=nats://localhost:4222

# Authentication & Security
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_TO_A_SECURE_RANDOM_STRING
JWT_EXPIRY_SECONDS=3600
CERTIFICATE_VALIDITY_DAYS=365

# TLS Configuration
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key
TLS_ENABLED=false  # Set to true in production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Message Configuration
MAX_MESSAGE_SIZE_BYTES=10485760  # 10MB
DEFAULT_MESSAGE_TTL_MS=5000

# Session Configuration
SESSION_TIMEOUT_SECONDS=3600
HEARTBEAT_INTERVAL_SECONDS=30
HEARTBEAT_TIMEOUT_SECONDS=90

# Logging
RUST_LOG=info,uaip_hub=debug
LOG_FORMAT=json  # or "pretty"

# Metrics
PROMETHEUS_PORT=9091
METRICS_ENABLED=true

# Development
DEV_MODE=true
ENABLE_CORS=true
